{
  "name": "usa-presence-calculator",
  "version": "1.0.0",
  "private": true,
  "description": "Premium mobile app for U.S. Lawful Permanent Residents to track physical presence for naturalization eligibility",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "lint": "eslint . && pnpm run --recursive lint",
    "lint:fix": "eslint . --fix && pnpm run --recursive lint:fix",
    "typecheck": "tsc --noEmit && pnpm run --recursive typecheck",
    "format": "prettier --write . && pnpm run --recursive format",
    "format:check": "prettier --check . && pnpm run --recursive format:check",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}