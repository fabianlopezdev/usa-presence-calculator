{
  "name": "@usa-presence/api",
  "version": "1.0.0",
  "description": "Backend API for USA Presence Calculator",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:simple": "pnpm build && concurrently \"pnpm build:watch\" \"nodemon --watch dist --exec node --env-file=.env dist/index.js\"",
    "dev:nodemon": "concurrently \"pnpm build:watch\" \"nodemon --watch dist --exec 'node --env-file=.env' dist/index.js\"",
    "dev:tsx": "nodemon --exec tsx src/index.ts",
    "dev:tsc": "tsc-watch --onSuccess \"node scripts/dev-server.js\"",
    "dev:built": "pnpm build && node --watch dist/index.js",
    "dev:debug": "tsx --inspect watch src/index.ts",
    "build": "tsc --build && tsc-alias && node scripts/fix-esm-imports.js",
    "build:watch": "tsc --build --watch",
    "start": "node --env-file=.env dist/index.js",
    "start:prod": "NODE_ENV=production node --env-file=.env.production dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx --env-file=.env src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:status": "drizzle-kit status",
    "dev:setup": "pnpm install && pnpm db:generate && pnpm db:migrate",
    "dev:clean": "rm -rf dist node_modules .turbo && pnpm install",
    "backup:db": "tsx scripts/backup-database.ts",
    "check:pre-deploy": "tsx scripts/pre-deployment-check.ts",
    "check:post-deploy": "tsx scripts/post-deployment-check.ts",
    "test:ci": "vitest run --reporter=verbose"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.826.0",
    "@fastify/basic-auth": "^6.2.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@simplewebauthn/server": "^13.1.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@usa-presence/shared": "workspace:*",
    "better-sqlite3": "^11.10.0",
    "drizzle-orm": "^0.44.2",
    "fastify": "^5.3.3",
    "fastify-plugin": "5.0.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.7.0",
    "prom-client": "^15.1.3",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^3.2.3",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.1",
    "nodemon": "^3.1.9",
    "pino-pretty": "13.0.0",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^6.2.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  }
}
