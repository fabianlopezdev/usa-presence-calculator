# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=/app/data/app.db
DATABASE_ENCRYPTION_KEY=your-database-encryption-key-at-least-32-chars

# Security
MASTER_ENCRYPTION_KEY=your-master-encryption-key-at-least-32-chars
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
COOKIE_SECRET=your-cookie-secret-at-least-32-chars-long

# API Configuration
API_PREFIX=/api/v1
# Multiple origins separated by comma for production
CORS_ORIGIN=https://app.yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=warn
LOG_PRETTY=false

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_AUDIT_LOGS=true
ENABLE_FIELD_ENCRYPTION=true