# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=./data/app.db
DATABASE_ENCRYPTION_KEY=generate-a-secure-32-byte-key-here

# Security
MASTER_ENCRYPTION_KEY=another-secure-32-byte-key-for-field-encryption
JWT_SECRET=your-jwt-secret-key-here
COOKIE_SECRET=your-cookie-secret-here

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_AUDIT_LOGS=true
ENABLE_FIELD_ENCRYPTION=true