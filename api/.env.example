# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=./data/app.db
DATABASE_ENCRYPTION_KEY=your-database-encryption-key-at-least-32-chars

# Security
MASTER_ENCRYPTION_KEY=your-master-encryption-key-at-least-32-chars
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
COOKIE_SECRET=your-cookie-secret-at-least-32-chars-long

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_AUDIT_LOGS=true
ENABLE_FIELD_ENCRYPTION=true
EOF < /dev/null